            <Button fx:id="RandomCodeButton" mnemonicParsing="false" onAction="#clickButtonRandomCodeAction" styleClass="calibration-button" text="Random Code ">
               <VBox.margin>
                  <Insets left="20.0" top="30.0" />
               </VBox.margin>

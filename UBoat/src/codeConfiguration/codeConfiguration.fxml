<HBox fx:id="HboxCodeConf" maxHeight="350.0" maxWidth="600.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="350.0" prefWidth="800.0" styleClass="skin-color" stylesheets="@codeConfiguration.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="codeConfiguration.codeConfigurationController">
   <children>
      <VBox prefHeight="400.0" prefWidth="208.0" styleClass="skin-color">
